# on rejette toutes les connexions entrantes
# iptables -t filter -P INPUT DROP

# drop incoming TCP traffic on port 22 (SSH) to be accepted.
iptables -I INPUT -p tcp -j DROP
# allow incoming TCP traffic on port 22 (SSH) to be accepted.
iptables -I INPUT -p tcp -dport 22 -j ACCEPT
# allow incoming TCP traffic on port 22 (SSH) from network (local) to be accepted.
iptables -I INPUT -s 10.10.200.0/24 -p tcp -dport 22 -j ACCEPT