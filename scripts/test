#!/bin/bash

input=$1

# Check if the string is a valid user
if id -u "$input" >/dev/null 2>&1; then
    echo "$input is a valid Linux user."
else
    # Check if the string is a valid group
    if getent group "$input" >/dev/null 2>&1; then
        echo "$input is a valid Linux group."
    else
        echo "$input is not a valid Linux user or group."
    fi
fi