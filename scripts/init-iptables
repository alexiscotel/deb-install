	# # CHECK DENY IP
	# if [ $verbose == true ] && [ $silent == false ]; then
	# 	printf "${c__fctAction}Checking for ssh denied ips ...${nocolor}\n"
	# fi

	# if [[ -z $ssh_denied_ips_str ]]; then
	# 	mand_errors+=("${c__error}parameter ${c__msgVar}-I | --deny-ip${c__error} is mandatory.${nocolor}")
	# else
