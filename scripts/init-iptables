	StartText
fi


CheckMandatoryParams
if [ $? -eq 1 ]; then
	exit 1
fi


ManageSSHDenyRules
printf "\n"
ManageSSHAllowRules


EndOfScript
if [[ ${#g_errors[@]} -gt 0 ]]; then
	exit 1
else
	exit 0
fi